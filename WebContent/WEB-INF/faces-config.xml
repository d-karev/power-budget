<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
 <managed-bean eager="true">
  <managed-bean-name>generalBean</managed-bean-name>
  <managed-bean-class>bean.generalBean</managed-bean-class>
  <managed-bean-scope>application</managed-bean-scope>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>userAuth</managed-bean-name>
  <managed-bean-class>bean.userAuth</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
  <managed-property>
   <property-name>generalBean</property-name>
   <property-class>bean.generalBean</property-class>
   <value>#{generalBean}</value>
  </managed-property>
  <managed-property>
   <property-name>sessionLocale</property-name>
   <property-class>bean.localeBean</property-class>
   <value>#{localeBean}</value>
  </managed-property>
  <managed-property>
   <property-name>loggedUser</property-name>
   <property-class>model.User</property-class>
   <null-value/>
  </managed-property>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>localeBean</managed-bean-name>
  <managed-bean-class>bean.localeBean</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
  <managed-property>
   <property-name>msgResource</property-name>
   <property-class>java.util.ResourceBundle</property-class>
   <value>#{msg}</value>
  </managed-property>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>nomenNewBean</managed-bean-name>
  <managed-bean-class>bean.nomenNewBean</managed-bean-class>
  <managed-bean-scope>view</managed-bean-scope>
  <managed-property>
   <property-name>userAuth</property-name>
   <property-class>bean.userAuth</property-class>
   <value>#{userAuth}</value>
  </managed-property>
 </managed-bean>
 <managed-bean>
  <managed-bean-name>nomensBean</managed-bean-name>
  <managed-bean-class>bean.nomensBean</managed-bean-class>
  <managed-bean-scope>view</managed-bean-scope>
  <managed-property>
   <property-name>userAuth</property-name>
   <property-class>bean.userAuth</property-class>
   <value>#{userAuth}</value>
  </managed-property>
 </managed-bean>
 <navigation-rule>
  <from-view-id>/index.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{userAuth.signIn}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/user/home.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/user/*</from-view-id>
  <navigation-case>
   <from-action>#{userAuth.signOut}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/index.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/user/nomenNew.xhtml</from-view-id>
  <navigation-case>
   <from-action>#{submitBeanParam.saveEntry(false)}</from-action>
   <from-outcome>success</from-outcome>
   <to-view-id>/user/nomens.xhtml</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-action>#{submitBeanParam.saveEntry(true)}</from-action>
   <from-outcome>successNew</from-outcome>
   <to-view-id>/user/nomenNew.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <validator>
  <validator-id>nomenNameValidator</validator-id>
  <validator-class>validators.NomenNameValidator</validator-class>
 </validator>
 <application>
  <locale-config>
   <default-locale>en</default-locale>
   <!--Bulgarian locale-->
   <supported-locale>bg</supported-locale>
  </locale-config>
  <resource-bundle>
   <description>English (default) locale</description>
   <base-name>internationalization.messages</base-name>
   <var>msg</var>
  </resource-bundle>
 </application>
</faces-config>
